# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /findByDatabase        controllers.DemoController.findByDatabase()
GET         /                      controllers.HomeController.index()
POST        /User                  controllers.HomeController.user()
#User
POST        /save                  controllers.UserController.createUser( request: Request)
POST        /del                   controllers.UserController.deleteUser( request: Request)
POST        /update                controllers.UserController.updateUser( request: Request)
POST        /getUser               controllers.UserController.getUser( request: Request)
POST        /userPagedList         controllers.UserController.userPagedList( request: Request)



GET         /assets/*file          controllers.Assets.versioned(path="/public", file: Asset)
